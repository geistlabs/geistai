{
  "expo": {
    "name": "Geist AI",
    "slug": "geist-v2",
    "version": "1.0.6",
    "orientation": "portrait",
    "icon": "./assets/images/geist-logo.png",
    "scheme": "geist",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "im.geist.ios",
      "buildNumber": "3",
      "simulator": {
        "deviceId": "0198E212-CDFE-4C69-9832-4625D9296986"
      },
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to record your voice for transcription.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false
        },
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/geist-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.geist.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/geist-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "37ee3bb2-75d7-46f2-8ec2-f48fbd02c1fa"
      }
    },
    "owner": "openqlabs"
  }
}
